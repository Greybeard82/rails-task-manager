<div class="all">
  <h1>Listing tasks:</h1>
  <ul>
    <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %></li>
  <%= link_to 'Edit', edit_task_path(task) %>
  <%= link_to 'Delete', destroy_path(task), method: :delete, data: {confirm: 'Are you sure you want to delete?'}  %>
    <% end %>
  </ul>

  <div class="add">
    <%= link_to 'Add', tasks_new_path %>
  </div>
</div>
